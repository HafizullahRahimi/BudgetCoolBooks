@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!-- Header Start -->
<header>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container-fluid">
            <!-- LOGO -->
            <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                <img src="~/images/admin.png" alt="" width="34" height="34" class=" " />
                Admin Panel
            </a>
            <!-- User Menu-->
            <div>
                <div class="d-flex align-items-center ">
                    <div class="flex-shrink-0 dropdown me-4">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/user.png" alt="mdo" width="32" height="32" class="rounded-circle" />
                            @User.Identity?.Name
                        </a>
                        <ul class="dropdown-menu text-small">
                            <li>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li>
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="dropdown-item text-danger">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <br>
</header>
<!-- Header End -->
